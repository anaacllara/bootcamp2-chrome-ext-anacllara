{
    "manifest_version": 3, 
    "name": "Bloquear Distrações",
    "version": "0.0.1",
    "description": "Extensão que bloqueia sites selecionados ao ativar o modo 'Foco'.", 
    "icons":{
        "16" : "icons/icon16.png", 
        "32" : "icons/icon32.png", 
        "48" : "icons/icon48.png", 
        "128": "icons/icon128.png"
    },
    "action": {
        "default_popup" : "src/popup/popup.html", 
        "default_title" : "Bloquear Distrações"
    },
    "background" : {
        "service_worker" : "src/background/service-worker.js"
    },
    "permissions": ["storage", "tabs"]
}